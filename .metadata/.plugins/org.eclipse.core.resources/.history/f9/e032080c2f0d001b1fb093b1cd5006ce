import java.awt.GridLayout;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.JButton;
import javax.swing.JLabel;
import javax.swing.JPanel;

public class btPan extends JPanel {

private String []l;
private JLabel log;
private GridLayout gl;
private String mot;
private String k="";
private JLabel ecris;
public btPan(){

	ecris =new JLabel();
	gl=new GridLayout(3,7);
		log=new JLabel("Panneau pour Button")	;
String []l={"A","B","C","D","E","F","G","H","I","J",
		"K","L","M","N","O","P","R","Q","S","T",
		"U","V","W","X","Y"}	;
this.setLayout(gl);
JButton []bt = new JButton[l.length];
for (int i=0;i<l.length;i++){
	bt[i]=new JButton(l[i]);
	bt[i].addActionListener(new list());
	this.add(bt[i]);
	
}

}class list implements ActionListener{




	@Override
	public void actionPerformed(ActionEvent a) {
		String op=a.getActionCommand();
		k=k+op;
		setT(op);
		getT();
	
		System.out.println(k );
		Label lo=new Label(k);

	}	
}
void setT (String af){
	this.mot=af;
	
}
String getT(){
	return mot;
	
}
}
